<VBox fx:id="rootElement" styleClass="ui-root" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.framedinterface.controller.InitialController">
  <children>
      <HBox VBox.vgrow="ALWAYS">
         <children>
            <VBox>
               <children>
                  <VBox prefHeight="396.0" prefWidth="468.0" spacing="5.0" styleClass="parameters-pane" VBox.vgrow="NEVER">
                     <children>
                        <HBox styleClass="single-parameter">
                           <children>
                              <Label styleClass="single-parameter__title" text="Process Specifications" HBox.hgrow="ALWAYS">
                                 <font>
                                    <Font size="24.0" />
                                 </font>
                              </Label>
                              <Region HBox.hgrow="ALWAYS" />
                              <Button fx:id="uploadModel" mnemonicParsing="false" onAction="#onButtonClickedUploadModel" styleClass="standard-button" text="Select..." />
                           </children>
                        </HBox>
                        <TableView fx:id="modelTabelView" editable="true">
                          <columns>
                            <TableColumn fx:id="modelNameColumn" prefWidth="137.5" text="Model Name" />
                            <TableColumn fx:id="modelTypeColumn" maxWidth="60.0" minWidth="60.0" prefWidth="60.0" text="Type" />
                              <TableColumn fx:id="modelRemoveColumn" maxWidth="30.0" minWidth="30.0" prefWidth="30.0" />
                          </columns>
                           <columnResizePolicy>
                              <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                           </columnResizePolicy>
                           <styleClass>
                              <String fx:value="table-padding" />
                              <String fx:value="hidden-scroll-bar--horizontal" />
                           </styleClass>
                        </TableView>
                     </children>
                  </VBox>
                  <HBox alignment="CENTER" styleClass="single-parameter">
                     <children>
                        <Label styleClass="single-parameter__title" text="Model reset" HBox.hgrow="ALWAYS">
                           <font>
                              <Font size="24.0" />
                           </font>
                        </Label>
                        <CheckBox fx:id="buttonResetYes" mnemonicParsing="false" onAction="#onClickResetYes" />
                     </children>
                  </HBox>
                  <HBox alignment="CENTER" styleClass="buttons-group--primary">
                     <children>
                        <Button fx:id="buttonRunPlanner" mnemonicParsing="false" onAction="#onClickPlanner" styleClass="standard-button" text="Run Planner" />
                     </children>
                  </HBox>
               </children>
               <padding>
                  <Insets left="5.0" />
               </padding>
               <styleClass>
                  <String fx:value="section-box" />
                  <String fx:value="section-box--main-parameters" />
               </styleClass>
            </VBox>
            <Separator orientation="VERTICAL" prefHeight="200.0" styleClass="separator--primary" />
            <SplitPane dividerPositions="0.7" HBox.hgrow="ALWAYS">
               <items>
                  <SplitPane dividerPositions="0.5" orientation="VERTICAL">
                     <items>
                        <VBox styleClass="section-box">
                           <children>
                              <HBox alignment="CENTER_LEFT" fillHeight="false" spacing="5.0">
                                 <children>
                            <Label alignment="CENTER" style="&#10;" text="Declare" textAlignment="CENTER" wrapText="false">
                                       <font>
                                  <Font size="18.0" fx:id="x1" />
                                       </font>
                                       <textFill>
                                  <Color red="0.624" green="0.624" blue="0.624" fx:id="x2" />
                                       </textFill>
                                    </Label>
                                    <Label text="Zoom" />
                                    <Slider fx:id="declZoomSlider" blockIncrement="0.1" max="4.0" value="1.0" />
                                    <HBox alignment="CENTER_LEFT" prefWidth="45.0" styleClass="percentage-box">
                                       <children>
                                          <TextField fx:id="declZoomValueField" alignment="CENTER_RIGHT" maxWidth="34.0" style="-fx-background-color: transparent;" text="100.0">
                                             <padding>
                                                <Insets bottom="2.0" left="2.0" top="2.0" />
                                             </padding>
                                          </TextField>
                                          <Label text="\%" />
                                       </children>
                                    </HBox>
                                    <ChoiceBox fx:id="declModelChoice" prefWidth="150.0" styleClass="standard-choice-box" />
                                 </children>
                                 <opaqueInsets>
                                    <Insets />
                                 </opaqueInsets>
                              </HBox>
                              <WebView fx:id="declWebView" prefHeight="200.0" prefWidth="200.0" VBox.vgrow="ALWAYS" />
                           </children>
                        </VBox>
                        <VBox layoutX="10.0" layoutY="10.0" styleClass="section-box">
                           <children>
                              <HBox alignment="CENTER_LEFT" fillHeight="false" spacing="5.0">
                                 <children>
                                    <Label alignment="CENTER" style="&#10;" text="Petri net" textAlignment="CENTER" wrapText="false">
                                       <font>
                                          <Font size="18.0" fx:id="x11" />
                                       </font>
                                       <textFill>
                                          <Color red="0.624" green="0.624" blue="0.624" fx:id="x21" />
                                       </textFill>
                                    </Label>
                                    <Label text="Zoom" />
                                    <Slider fx:id="pnZoomSlider" blockIncrement="0.1" max="4.0" value="1.0" />
                                    <HBox alignment="CENTER_LEFT" prefWidth="45.0" styleClass="percentage-box">
                                       <children>
                                          <TextField fx:id="pnZoomValueField" alignment="CENTER_RIGHT" maxWidth="34.0" style="-fx-background-color: transparent;" text="100.0">
                                             <padding>
                                                <Insets bottom="2.0" left="2.0" top="2.0" />
                                             </padding>
                                          </TextField>
                                          <Label text="\%" />
                                       </children>
                                    </HBox>
                                    <ChoiceBox fx:id="pnModelChoice" prefWidth="150.0" styleClass="standard-choice-box" />
                                    <CheckBox fx:id="bttnDisplayViolations" mnemonicParsing="false" onAction="#switchViolationStrings" text="Show Violations" />
                                    <Label text="Final Marking:" />
                                    <Label fx:id="labelFinalMarking" />
                                 </children>
                                 <opaqueInsets>
                                    <Insets />
                                 </opaqueInsets>
                              </HBox>
                              <WebView fx:id="pnWebView" prefHeight="200.0" prefWidth="200.0" VBox.vgrow="ALWAYS" />
                           </children>
                        </VBox>
                     </items>
                     <padding>
                        <Insets left="5.0" right="5.0" />
                     </padding>
                  </SplitPane>
                  <VBox styleClass="section-box">
                     <children>
                  <Label alignment="CENTER" style="&#10;" text="Prefix+Continuation" textAlignment="CENTER" textFill="$x2" wrapText="false" VBox.vgrow="ALWAYS">
                           <font>
                              <Font size="24.0" />
                           </font>
                        </Label>
                        <HBox>
                           <children>
                              <Label fx:id="selectedDecl" text="DECLARE MODEL" textAlignment="CENTER">
                                 <HBox.margin>
                                    <Insets left="5.0" right="15.0" />
                                 </HBox.margin>
                              </Label>
                              <Label fx:id="selectedPN" text="PN MODEL" textAlignment="CENTER">
                                 <HBox.margin>
                                    <Insets left="15.0" right="5.0" />
                                 </HBox.margin>
                              </Label>
                           </children>
                           <padding>
                              <Insets left="5.0" right="5.0" />
                           </padding>
                           <VBox.margin>
                              <Insets />
                           </VBox.margin>
                        </HBox>
                        <ListView fx:id="planListView" snapToPixel="false" VBox.vgrow="ALWAYS" />
                        <HBox alignment="CENTER">
                           <children>
                              <HBox alignment="CENTER">
                                 <children>
                                    <Label text="Plan Cost:">
                                       <font>
                                          <Font size="24.0" />
                                       </font>
                                    </Label>
                                    <Label fx:id="labelCost">
                                       <font>
                                          <Font size="24.0" />
                                       </font>
                                    </Label>
                                 </children>
                                 <HBox.margin>
                                    <Insets right="15.0" />
                                 </HBox.margin>
                                 <padding>
                                    <Insets left="10.0" right="10.0" />
                                 </padding>
                              </HBox>
                              <Button fx:id="buttonPrefix" mnemonicParsing="false" onAction="#onClickPrefix" styleClass="standard-button" text="Reset">
                                 <HBox.margin>
                                    <Insets right="20.0" />
                                 </HBox.margin>
                              </Button>
                           </children>
                           <padding>
                              <Insets left="5.0" right="5.0" />
                           </padding>
                           <opaqueInsets>
                              <Insets />
                           </opaqueInsets>
                        </HBox>
                     </children>
                  </VBox>
               </items>
            </SplitPane>
         </children>
      </HBox>
      <HBox fx:id="timelineControls" alignment="CENTER_LEFT" spacing="5.0" styleClass="parameters-pane">
         <children>
            <Button fx:id="stepBackwardButton" maxHeight="25.0" minHeight="25.0" mnemonicParsing="false" onAction="#stepBackward" styleClass="small-button">
               <graphic>
                  <FontIcon iconLiteral="fa-step-backward" styleClass="small-button__icon" />
               </graphic>
            </Button>
            <Button fx:id="playPauseButton" maxHeight="25.0" minHeight="25.0" minWidth="30.0" mnemonicParsing="false" onAction="#playPause" styleClass="small-button">
               <graphic>
                  <FontIcon fx:id="playFonticon" iconLiteral="fa-play" styleClass="small-button__icon" />
               </graphic>
            </Button>
            <Button fx:id="stepForwardButton" maxHeight="25.0" minHeight="25.0" mnemonicParsing="false" onAction="#stepForward" styleClass="small-button">
               <graphic>
                  <FontIcon iconLiteral="fa-step-forward" styleClass="small-button__icon" />
               </graphic>
            </Button>
            <HBox alignment="CENTER" prefWidth="50.0">
               <children>
                  <Label fx:id="currentEventNumber" text="0" />
                  <Label text="/" />
                  <Label fx:id="totalEventsNumber" text="10" />
               </children>
            </HBox>
            <Slider fx:id="eventSlider" blockIncrement="0.0" majorTickUnit="1.0" max="10.0" minorTickCount="0" showTickMarks="true" HBox.hgrow="ALWAYS">
               <HBox.margin>
                  <Insets top="8.0" />
               </HBox.margin>
            </Slider>
         </children>
      </HBox>
    <HBox id="HBox" alignment="CENTER_LEFT" spacing="5.0" VBox.vgrow="NEVER">
      <children>
        <Label maxHeight="1.7976931348623157E308" maxWidth="-1.0" text="Status: " HBox.hgrow="ALWAYS">
          <font>
            <Font size="11.0" fx:id="x3" />
          </font>
          <textFill>
            <Color red="0.625" green="0.625" blue="0.625" fx:id="x4" />
          </textFill>
        </Label>
        <Pane fx:id="paneStatus" prefHeight="-1.0" prefWidth="-1.0" HBox.hgrow="ALWAYS" />
      </children>
      <padding>
        <Insets bottom="3.0" left="3.0" right="3.0" top="3.0" />
      </padding>
    </HBox>
  </children>
</VBox>
